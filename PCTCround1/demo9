first = input()
dance = first

for i in range(7):
    if first == '+':
        dance = dance + '&'
        first = '&'
    elif first == '&':
        dance = dance + '>'
        first = '>'
    elif first == '>':
        dance = dance + '<'
        first = '<'
    elif first == '<':
        dance = dance + '+'
        first = '+'

print(dance)
